<%- model_class = Post -%>


<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @post.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @post.text %></dd>
</dl>


<hr>

<div class="center hero-unit">

<h3>Comments:  (<%= @post.comments.count %>)
 <%= link_to t('.new', :default => t("helpers.links.new")),
    		new_post_comment_path(@post.id),
            	:class => 'btn btn-primary' %></h3>

<% if @post.comments.any? %>
	<table class="table table-striped">
	  <tbody>
		<%= render :partial => "comments/comment", :locals => { :post => @post, :comments => @post.comments } %>
	  </tbody>
	</table>
<% end %>

